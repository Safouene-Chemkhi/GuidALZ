<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b412b7"
    android:orientation="vertical"
    tools:context="com.groupe36.supcom.guidalz_10.Register">


    <TextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="30sp"
        android:textColor="@color/registerTheme"
        android:textAlignment="center"
        android:layout_marginBottom="10sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:orientation="vertical"
            android:layout_margin="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Mail"
                android:textColor="@color/registerTheme"
                android:textSize="15sp"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/new_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="xxxx.xxxx@xxx.xxx"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColorHint="@color/registerTheme"
                android:ems="10"
                android:imeOptions="actionUnspecified"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:orientation="vertical"
            android:layout_margin="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Password"
                android:textColor="@color/registerTheme"
                android:textSize="15sp"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="*****"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColorHint="@color/registerTheme"
                android:ems="10"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:orientation="vertical"
            android:layout_margin="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="MOBILE PHONE"
                android:textColor="@color/registerTheme"
                android:textSize="15sp"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=" xx xxx xxx"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColorHint="@color/registerTheme"
                android:ems="10"
                android:imeOptions="actionUnspecified"
                android:inputType="phone"
                android:maxLines="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="SUBMIT"
            android:textColor="@color/colorPrimary"
            android:layout_margin="20sp"
            android:background="#e28cd8"
            android:textSize="20sp"
            android:onClick="submet_register"/>

        <LinearLayout
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e28cd8"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:orientation="vertical"
            />


    </LinearLayout>
    </ScrollView>
</LinearLayout>
